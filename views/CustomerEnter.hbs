<html>
<head>
    <title>Enter</title>
    <link href="../css/styles.css" rel="stylesheet" type="text/css">
    <script src="../js/jquery-3.3.1.js" ></script>
</head>
<body>
<div class="content">
<h1>Введите учётные данные:</h1>
<div class="form_box">
    <label>Логин</label>
    <input type="text" placeholder="login" name="login" id="login" required>
    <label>Пароль</label>
    <input type="password" placeholder="password" name="password" id="password" required>
</div>
    <div>
        <button type="submit" id="submit_button" class="enter">Войти</button>
    </div>
<div>
    <h3 id="incorrect">
    </h3>
</div>
</div>
<script>
$("#submit_button").click(function () {
    let login=$("#login").val();
    let password=$("#password").val();
    $.ajax({
        url:"Employee",
        contentType:"application/json",
        type:"POST",
        data:JSON.stringify({
            login: login,
            password: password
        }),
        success:function (status) {
          if(status){window.location="/employee/cabinet"}
          else document.querySelector("#incorrect").innerHTML="Неверно";
        }

    })
});
</script>
</body>
</html>